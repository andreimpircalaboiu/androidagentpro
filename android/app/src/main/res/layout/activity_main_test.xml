<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="1">


    <Button android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:text="@string/button2_text"
        android:layout_width="wrap_content" android:id="@+id/button_startAgent"></Button>
    <Button android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:text="@string/button_text"
        android:layout_width="wrap_content" android:id="@+id/button_priceList"></Button>
    <TextView android:layout_height="wrap_content" android:id="@+id/infoTextView"
        android:layout_width="wrap_content" android:text="info"></TextView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PriceListView">

    </ListView>
</LinearLayout>
